import java.util.*;

public class UniqueWordsCounter {
    public static void main(String[] args) {
        String[] words = {"apple", "orange", "banana", "apple", "pear", "grape", "banana", "peach", "orange", "kiwi", "pear"};
        
        // Создаем множество для хранения уникальных слов
        Set<String> uniqueWords = new HashSet<>();
        // Создаем словарь для подсчета количества вхождений каждого слова
        Map<String, Integer> wordCounts = new HashMap<>();
        
        // Проходимся по всем словам в массиве
        for (String word : words) {
            // Добавляем слово в множество уникальных слов
            uniqueWords.add(word);
            // Если слово уже есть в словаре, увеличиваем его счетчик на 1, иначе добавляем его в словарь со значением 1
            if (wordCounts.containsKey(word)) {
                int count = wordCounts.get(word);
                wordCounts.put(word, count + 1);
            } else {
                wordCounts.put(word, 1);
            }
        }
        
        // Выводим список уникальных слов и количество их вхождений
        System.out.println("Уникальные слова:");
        for (String word : uniqueWords) {
            System.out.println(word + " - " + wordCounts.get(word) + " раз(а)");
        }
    }
}
